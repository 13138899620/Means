<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>后台管理 | 管理中心</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.4 -->
    <link href="__ATEBOOT__/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="__ATEPLUGIN__/font-awesome/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="__ATEPLUGIN__/ionicons/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="__ATEDIST__/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins 
         folder instead of downloading all of them to reduce the load. -->
    <link href="__ATEDIST__/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

      <include file="Public/header" />

      <!-- =============================================== -->

      <!-- Left side column. contains the sidebar -->

      <include file="Public/aside" />
      <!-- =============================================== -->

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            修改密码
            <small>it all starts here</small>
          </h1>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="col-md-6">
              <!-- general form elements -->
              <div class="box box-primary">
                <div class="box-header">
                  <!-- <h3 class="box-title">Quick Example</h3> -->
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" id="form1" action="{:U('Admin/System/domodipwd')}" method="post">
                  <input type="hidden" name="id" value="{$admin.id}" />
                  <div class="box-body">
                    <div class="form-group">
                      <label for="inputUser">原来的密码</label>
                      <input type="text" class="form-control"  name="oldpassword" value="">
                    </div>
                    <div class="form-group">
                      <label for="inputUser">新密码</label>
                      <input type="text" class="form-control"  name="password"  value="">
                    </div>
                  </div><!-- /.box-body -->

                  <div class="box-footer">
                    <button type="submit" class="btn btn-primary">提交</button>
                  </div>
                </form>
              </div><!-- /.box -->
            </div>
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->

      <include file="Public/footer" />

      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <div class='control-sidebar-bg'></div>
    </div><!-- ./wrapper -->

    <!-- jQuery 2.1.4 -->
    <script src="__ATEPLUGIN__/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="__ATEBOOT__/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="__ATEPLUGIN__/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src='__ATEPLUGIN__/fastclick/fastclick.min.js'></script>
    <!-- AdminLTE App -->
    <script src="__ATEDIST__/js/app.min.js" type="text/javascript"></script>

    <!-- Demo -->
    <script src="__ATEDIST__/js/demo.js" type="text/javascript"></script>
  </body>
</html>